<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="it.healthy.dao.CheckGroupDao">
    
    
    <resultMap id="checkGroupResultMap" type="it.healthy.domain.CheckGroup">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
    </resultMap>

    <resultMap type="it.healthy.domain.CheckGroup" id="checkGroupAndCheckItemResultMap" extends="checkGroupResultMap">
        <collection property="checkItems" javaType="ArrayList"
                    ofType="it.healthy.domain.CheckItem" column="id"
                    select="it.healthy.dao.CheckItemDao.findCheckItemById" >
        </collection>
    </resultMap>


    <select id="findAll"  resultType="it.healthy.domain.CheckItem">
        select * from t_checkitem
    </select>

    <insert id="addGroup" parameterType="it.healthy.domain.CheckGroup">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
          insert into t_checkgroup(code,name,sex,helpCode,remark,attention)
            values
      	(#{code},#{name},#{sex},#{helpCode},#{remark},#{attention})
    </insert>

    <insert id="addGroupAndItem">
         insert into t_checkgroup_checkitem(checkgroup_id,checkitem_id)
      		values
      	(#{checkgroup_id},#{checkitem_id})
    </insert>

    <select id="findPage" parameterType="string" resultType="it.healthy.domain.CheckGroup">
        select * from t_checkgroup
        <if test="value != null and value.length > 0">
            where code like #{value} or name like #{value} or helpCode like #{value}
        </if>
    </select>
    <select id="findById" resultType="it.healthy.domain.CheckGroup">
        select * from t_checkgroup where id=#{value}
    </select>

    <select id="findCheckItemIdsByCheckGroupId" parameterType="int" resultType="int">
        select checkitem_id from t_checkgroup_checkitem where checkgroup_id=#{value}
    </select>
    <select id="findCheckGroupById" resultMap="checkGroupAndCheckItemResultMap">
        select * from t_checkgroup  where id
  in (select checkgroup_id from t_package_checkgroup where package_id=#{id})
    </select>

    <update id="updateByid" parameterType="it.healthy.domain.CheckGroup">
        update t_checkgroup
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteCheckItemByCheckGroupId" parameterType="int">
        delete from t_checkgroup_checkitem where  checkgroup_id=#{id}
    </delete>

    <delete id="deleteCheckGroup" parameterType="int">
        delete from t_checkgroup where  id=#{id}
    </delete>

</mapper>